        "gateway":"10.0.0.1",
        "templates":[{"template":"internal", "domain":"internet.virt", "ns":"10.0.0.1"}]},
      {"container":"hacker",
        "interfaces":[
          {"bridge":"wan", "address":"10.0.0.4/24"}
